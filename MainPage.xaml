<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="eFinance.MainPage">

    <VerticalStackLayout Padding="40"
                         Spacing="25"
                         VerticalOptions="Center">

        <Label Text="Finances"
               FontSize="32"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

        <!-- 2x2 grid -->
        <Grid RowDefinitions="Auto,Auto"
              ColumnDefinitions="*,*"
              RowSpacing="16"
              ColumnSpacing="16"
              HorizontalOptions="Center">

            <Button Grid.Row="0" Grid.Column="0"
                    Text="Accounts"
                    WidthRequest="220"
                    Style="{StaticResource NeutralButtonStyle}"
                    Command="{Binding OpenAccountsCommand}" />

            <Button Grid.Row="0" Grid.Column="1"
                    Text="Duplicate Audit"
                    WidthRequest="220"
                    Style="{StaticResource NeutralButtonStyle}"
                    Command="{Binding OpenDuplicateAuditCommand}" />

            <Button Grid.Row="1" Grid.Column="0"
                    Text="Categories"
                    WidthRequest="220"
                    Style="{StaticResource NeutralButtonStyle}"
                    Command="{Binding CategoriesCommand}" />

            <Button Grid.Row="1" Grid.Column="1"
                    Text="Import Formats"
                    WidthRequest="220"
                    Style="{StaticResource NeutralButtonStyle}"
                    Command="{Binding OpenImportFormatsCommand}" />

        </Grid>

        <!-- Exit Button -->
        <Button Text="Exit"
                WidthRequest="120"
                HorizontalOptions="Center"
                Style="{StaticResource DangerButtonStyle}"
                Command="{Binding ExitCommand}" />

    </VerticalStackLayout>
</ContentPage>
