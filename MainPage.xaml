<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KukiFinance.MainPage"
             Title="Kukulski Finances">
    <VerticalStackLayout Padding="40" Spacing="25" VerticalOptions="Center">
        <Label Text="Kukulski Finances"
               FontSize="32"
               HorizontalOptions="Center" />

        <!-- 5-column grid for main navigation -->
        <Grid ColumnDefinitions="*,*,*,*,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto,Auto">
            <!-- Column Headers -->
            <Label Grid.Row="0" Grid.Column="0" Text="Summary" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center"/>
            <Label Grid.Row="0" Grid.Column="1" Text="Assets" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center"/>
            <Label Grid.Row="0" Grid.Column="2" Text="Cash" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center"/>
            <Label Grid.Row="0" Grid.Column="3" Text="Liabilities" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center"/>
            <Label Grid.Row="0" Grid.Column="4" Text="Tools" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center"/>

            <!-- Column 0: Summary -->
            <Button Grid.Row="1" 
                    Grid.Column="0" 
                    Text="Finance Summary" 
                    x:Name="FinanceSummaryButton" 
                    BackgroundColor="LightYellow" 
                    TextColor="Black" 
                    FontSize="16" 
                    HorizontalOptions="Fill" 
                    Command="{Binding OpenFinanceSummaryCommand}" />
            <Button Grid.Row="3" 
                    Grid.Column="0" 
                    Text="Expense Summary" 
                    x:Name="ExpenseButton" 
                    BackgroundColor="LightYellow" 
                    TextColor="Black" 
                    FontSize="16" 
                    HorizontalOptions="Fill" 
                    Command="{Binding OpenExpenseCommand}" />
            <Button Grid.Row="4" 
                    Grid.Column="0" 
                    Text="Average Expense Summary" 
                    x:Name="AverageExpenseButton" 
                    BackgroundColor="LightYellow" 
                    TextColor="Black" 
                    FontSize="16" 
                    HorizontalOptions="Fill" 
                    Command="{Binding OpenAverageExpenseCommand}" />
            <Button Grid.Row="5" 
                    Grid.Column="0" 
                    Text="Cash Flow" 
                    x:Name="CashFlowButton" 
                    BackgroundColor="LightYellow" 
                    TextColor="Black" 
                    FontSize="16" 
                    HorizontalOptions="Fill" 
                    Command="{Binding OpenCashFlowCommand}" />
            <Button Grid.Row="2" 
                    Grid.Column="0" 
                    Text="Calendar"
                    x:Name="CalendarButton"
                    BackgroundColor="LightYellow"
                    TextColor="Black"
                    FontSize="16"
                    HorizontalOptions="Fill"
                    Command="{Binding OpenCalendarCommand}" />
            <!-- Add more as needed -->

            <!-- Column 1: Assets -->
            <Button Grid.Row="1" 
                    Grid.Column="1" 
                    Text="Midland" 
                    BackgroundColor="LightBlue"  
                    FontSize="16" TextColor="Black" 
                    HorizontalOptions="Fill" 
                    Command="{Binding OpenMidlandCommand}" />
            <Button Grid.Row="2" 
                    Grid.Column="1" 
                    Text="Charles Schwab Contributory" 
                    BackgroundColor="LightBlue" 
                    FontSize="16" TextColor="Black" 
                    HorizontalOptions="Fill" 
                    Command="{Binding OpenCharlesSchwabContributoryCommand}" />
            <Button Grid.Row="3" 
                    Grid.Column="1" 
                    Text="Charles Schwab Joint Tenant" 
                    BackgroundColor="LightBlue" 
                    FontSize="16" TextColor="Black" 
                    HorizontalOptions="Fill" 
                    Command="{Binding OpenCharlesSchwabJointTenantCommand}" />
            <Button Grid.Row="4" 
                    Grid.Column="1" 
                    Text="Charles Schwab Roth IRA Ed" 
                    BackgroundColor="LightBlue" 
                    FontSize="16" TextColor="Black" 
                    HorizontalOptions="Fill" 
                    Command="{Binding OpenCharlesSchwabRothIRAEdCommand}" />
            <Button Grid.Row="5" 
                    Grid.Column="1" 
                    Text="Charles Schwab Roth IRA Patti" 
                    BackgroundColor="LightBlue" 
                    FontSize="16" TextColor="Black" 
                    HorizontalOptions="Fill" 
                    Command="{Binding OpenCharlesSchwabRothIRAPattiCommand}" />
            <Button Grid.Row="6" 
                    Grid.Column="1" 
                    Text="NetX" 
                    BackgroundColor="LightBlue" 
                    FontSize="16" TextColor="Black" 
                    HorizontalOptions="Fill"
                    Command="{Binding OpenNetXCommand}" />
            <Button Grid.Row="7" 
                    Grid.Column="1" 
                    Text="HealthPro" 
                    BackgroundColor="LightBlue" 
                    FontSize="16" 
                    TextColor="Black" 
                    HorizontalOptions="Fill" 
                    Command="{Binding OpenHealthProCommand}" />
            <Button Grid.Row="8" 
                    Grid.Column="1" 
                    Text="Select 401(K)" 
                    BackgroundColor="LightBlue" 
                    FontSize="16" 
                    TextColor="Black" 
                    HorizontalOptions="Fill" 
                    Command="{Binding OpenSelect401KCommand}" />
            <Button Grid.Row="9" 
                    Grid.Column="1" 
                    Text="Gold" 
                    BackgroundColor="LightBlue" 
                    FontSize="16" TextColor="Black" 
                    HorizontalOptions="Fill"
                    Command="{Binding OpenGoldCommand}" />
            <Button Grid.Row="10" 
                    Grid.Column="1" 
                    Text="House" 
                    BackgroundColor="LightBlue" 
                    FontSize="16" 
                    TextColor="Black" 
                    HorizontalOptions="Fill"
                    Command="{Binding OpenHouseCommand}" />
            <Button Grid.Row="11" 
                    Grid.Column="1" 
                    Text="Cheverolet Impala" 
                    BackgroundColor="LightBlue" 
                    FontSize="16" TextColor="Black" 
                    HorizontalOptions="Fill" 
                    Command="{Binding OpenChevroletImpalaCommand}" />
            <Button Grid.Row="12" 
                    Grid.Column="1" 
                    Text="Nissan Sentra" 
                    BackgroundColor="LightBlue" 
                    FontSize="16" TextColor="Black" 
                    HorizontalOptions="Fill" 
                    Command="{Binding OpenNissanSentraCommand}" />
            <!-- Add more as needed -->

            <!-- Column 2: Cash -->
            <Button Grid.Row="1" 
                    Grid.Column="2" 
                    Text="Cash Register"
                    x:Name="CashButton"
                    BackgroundColor="Azure"
                    TextColor="Black"
                    FontSize="16"
                    HorizontalOptions="Fill"
                    Command="{Binding OpenCashCommand}" />
            <Button Grid.Row="2" 
                    Grid.Column="2" 
                    Text="BMO Check Register"
                    x:Name="BmoCheckRegisterButton"
                    BackgroundColor="Azure"
                    TextColor="Black"
                    FontSize="16"
                    HorizontalOptions="Fill"
                    Command="{Binding OpenBmoCheckRegisterCommand}" />
            <Button Grid.Row="3" 
                    Grid.Column="2" 
                    Text="BMO Money Market Register"
                    x:Name="BmoMoneyMarketRegisterButton"
                    BackgroundColor="Azure"
                    TextColor="Black"
                    FontSize="16"
                    HorizontalOptions="Fill"
                    Command="{Binding OpenBmoMoneyMarketRegisterCommand}" />
            <Button Grid.Row="4" 
                    Grid.Column="2" 
                    Text="BMO CD Register"
                    x:Name="BmoCdRegisterButton"
                    BackgroundColor="Azure"
                    TextColor="Black"
                    FontSize="16"
                    HorizontalOptions="Fill"
                    Command="{Binding OpenBmoCdRegisterCommand}" />
            <Button Grid.Row="13" 
                    Grid.Column="2" 
                    Text="" 
                    BackgroundColor="Transparent" />
            <Button Grid.Row="14" 
                    Grid.Column="2" 
                    Text="Exit"
                    x:Name="ExitButton"
                    WidthRequest="96"
                    BackgroundColor="IndianRed"
                    TextColor="Black"
                    FontSize="16"
                    HorizontalOptions="Fill"
                    Command="{Binding ExitCommand}" />
            <!-- Add more as needed -->

            <!-- Column 3: Liabilities (placeholders) -->
            <Button Grid.Row="1" 
                    Grid.Column="3" 
                    Text="AMEX"
                    x:Name="AMEXButton"
                    BackgroundColor="Moccasin"
                    FontSize="16"
                    TextColor="Black"
                    HorizontalOptions="Fill"
                    Command="{Binding OpenAMEXCommand}" />
            <Button Grid.Row="2" 
                    Grid.Column="3" 
                    Text="Visa" 
                    BackgroundColor="Moccasin" 
                    FontSize="16" TextColor="Black" 
                    HorizontalOptions="Fill"
                    Command="{Binding OpenVisaCommand}" />
            <Button Grid.Row="3" 
                    Grid.Column="3" 
                    Text="MasterCard" 
                    BackgroundColor="Moccasin" 
                    FontSize="16" 
                    TextColor="Black" 
                    HorizontalOptions="Fill"
                    Command="{Binding OpenMasterCardCommand}" />
            <!-- Add more as needed -->

            <!-- Column 4: Tools -->
            <Button Grid.Row="1" 
                    Grid.Column="4" 
                    Text="Check Number" 
                    x:Name="CheckNumberButton" 
                    BackgroundColor="LightGray" 
                    TextColor="Black" FontSize="16" 
                    HorizontalOptions="Fill" 
                    Command="{Binding OpenCheckNumberCommand}" />
            <Button Grid.Row="2"
                    Grid.Column="4"
                    Text="Category"
                    x:Name="CategoryButton"
                    BackgroundColor="LightGray"
                    TextColor="Black"
                    FontSize="16"
                    HorizontalOptions="Fill"
                    Command="{Binding OpenCategoryCommand}" />
            <Button Grid.Row="3" 
                    Grid.Column="4" 
                    Text="Category List"
                    x:Name="CategoryListButton"
                    BackgroundColor="LightGray"
                    TextColor="Black"
                    FontSize="16"
                    HorizontalOptions="Fill"                
                    Command="{Binding OpenCategoryListCommand}" />
            <Button Grid.Row="4"
                    Grid.Column="4"
                    Text="Opening Balances"
                    x:Name="OpeningBalancesButton"
                    BackgroundColor="LightGray"
                    TextColor="Black"
                    FontSize="16"
                    HorizontalOptions="Fill"
                    Command="{Binding OpenOpeningBalancesCommand}" />
            <Button Grid.Row="5" 
                    Grid.Column="4"
                    Text="Excluded Categories"
                    x:Name="ExcludedCategoriesButton"
                    BackgroundColor="LightGray"
                    TextColor="Black"
                    FontSize="16"
                    HorizontalOptions="Fill"
                    Command="{Binding OpenExcludedCategoriesCommand}" />
            <Button Grid.Row="6" 
                    Grid.Column="4"
                    Text="Forecast Expenses"
                    x:Name="ForecastExpensesButton"
                    BackgroundColor="LightGray"
                    TextColor="Black"
                    FontSize="16"
                    HorizontalOptions="Fill"
                    Command="{Binding OpenForecastExpensesCommand}" />
            <!-- Add more as needed -->
            
        </Grid>
    </VerticalStackLayout>
</ContentPage>