<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<!-- Windows-only -->
		<TargetFramework>net8.0-windows10.0.19041.0</TargetFramework>

		<!-- MAUI -->
		<UseMaui>true</UseMaui>
		<SingleProject>true</SingleProject>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>

		<!-- App identity -->
		<RootNamespace>eFinance</RootNamespace>
		<AssemblyName>eFinance</AssemblyName>
		<ApplicationTitle>eFinance</ApplicationTitle>
		<ApplicationId>com.kukulski.efinance</ApplicationId>

		<!-- Versioning -->
		<ApplicationDisplayVersion>1.0</ApplicationDisplayVersion>
		<ApplicationVersion>1</ApplicationVersion>

		<!-- Windows min version -->
		<SupportedOSPlatformVersion>10.0.17763.0</SupportedOSPlatformVersion>
		<TargetPlatformMinVersion>10.0.17763.0</TargetPlatformMinVersion>

		<!-- Output -->
		<OutputType>WinExe</OutputType>

		<!-- Target x64 only -->
		<Platforms>x64</Platforms>
		<RuntimeIdentifier>win-x64</RuntimeIdentifier>
		<UseRidGraph>true</UseRidGraph>

		<!-- Keep self-contained WinAppSDK runtime as you had it -->
		<WindowsAppSDKSelfContained>true</WindowsAppSDKSelfContained>
	</PropertyGroup>

	<ItemGroup>
		<!-- App Icon -->
		<MauiIcon Include="Resources\AppIcon\appicon.svg" />

		<!-- Splash Screen -->
		<MauiSplashScreen Include="Resources\Splash\splash.png" Color="#512BD4" BaseSize="128,128" />

		<!-- Images -->
		<MauiImage Include="Resources\Images\*" />
		<MauiImage Update="Resources\Images\dotnet_bot.png" Resize="True" BaseSize="300,185" />

		<!-- Custom Fonts -->
		<MauiFont Include="Resources\Fonts\*" />

		<!-- Raw Assets -->
		<MauiAsset Include="Resources\Raw\**" LogicalName="%(RecursiveDir)%(Filename)%(Extension)" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="CommunityToolkit.Mvvm" Version="8.3.2" />
		<PackageReference Include="CsvHelper" Version="33.1.0" />
		<PackageReference Include="LiveChartsCore.SkiaSharpView.Maui" Version="2.0.0-rc5.4" />
		<PackageReference Include="Microsoft.Data.Sqlite" Version="8.0.24" />
		<PackageReference Include="Microsoft.Maui.Controls" Version="8.0.100" />
		<PackageReference Include="Microsoft.Extensions.Logging.Debug" Version="8.0.1" />
		<PackageReference Include="OxyPlot.Maui.Skia" Version="1.1.0" />
	</ItemGroup>

	<ItemGroup>
		<Compile Update="Pages\CashRegisterPage.xaml.cs">
			<DependentUpon>CashRegisterPage.xaml</DependentUpon>
		</Compile>
		<Compile Update="Pages\BmoMoneyMarketRegisterPage.xaml.cs">
			<DependentUpon>BmoMoneyMarketRegisterPage.xaml</DependentUpon>
		</Compile>
		<Compile Update="Pages\BmoCheckRegisterPage.xaml.cs">
			<DependentUpon>BmoCheckRegisterPage.xaml</DependentUpon>
		</Compile>
		<Compile Update="Pages\CategoriesPage.xaml.cs">
		  <DependentUpon>CategoriesPage.xaml</DependentUpon>
		</Compile>
	</ItemGroup>

	<ItemGroup>
		<MauiXaml Update="Pages\AccountsPage.xaml">
		  <Generator>MSBuild:Compile</Generator>
		</MauiXaml>
		<MauiXaml Update="Pages\DeletedTransactionsPage.xaml">
		  <Generator>MSBuild:Compile</Generator>
		</MauiXaml>
		<MauiXaml Update="Pages\RegisterPage.xaml">
			<Generator>MSBuild:Compile</Generator>
		</MauiXaml>
		<MauiXaml Update="Pages\CategoriesPage.xaml">
			<Generator>MSBuild:Compile</Generator>
		</MauiXaml>
		<MauiXaml Update="Pages\OpeningBalancesPage.xaml">
			<Generator>MSBuild:Compile</Generator>
		</MauiXaml>
	</ItemGroup>

</Project>
