<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="eFinance.Pages.SecurityReviewPage"
             Title="Review Securities">

    <VerticalStackLayout Padding="20" Spacing="16">
        <!-- Security Name -->
        <Label x:Name="SecurityNameLabel"
               FontSize="20"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

        <!-- Security Amount (read-only) -->
        <Label x:Name="SecurityAmountLabel"
               FontSize="16"
               HorizontalOptions="Center"
               IsVisible="True" />

        <!-- Amount Entry (for editing/adding) -->
        <Entry x:Name="AmountEntry"
               Keyboard="Numeric"
               FontSize="16"
               HorizontalOptions="Center"
               WidthRequest="200"
               IsVisible="False" />

        <HorizontalStackLayout Spacing="12" HorizontalOptions="Center">
            <Button Text="Edit" Clicked="OnEditClicked" />
            <Button Text="Delete" Clicked="OnDeleteClicked" />
            <Button Text="Next" Clicked="OnNextClicked" />
        </HorizontalStackLayout>

        <StackLayout x:Name="RidaPanel" IsVisible="False" Spacing="12">
            <Label Text="Enter RIDA Amount:" FontSize="16" />
            <Entry x:Name="RidaEntry" Keyboard="Numeric" FontSize="16" WidthRequest="200" />
            <Label Text="Enter RIDA Description:" FontSize="16" />
            <Entry x:Name="RidaDescriptionEntry" FontSize="16" WidthRequest="300" />
            <Button Text="Finish" Clicked="OnFinishClicked" />
        </StackLayout>
    </VerticalStackLayout>
</ContentPage>