<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="eFinance.Pages.TransactionEditPage"
             Title="Edit Transaction">


    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="14">

            <Label x:Name="HeaderLabel"
                   Text="Transaction"
                   FontSize="22"
                   FontAttributes="Bold" />

            <Grid RowDefinitions="Auto,Auto,Auto,Auto" ColumnDefinitions="140,*" ColumnSpacing="12" RowSpacing="12">

                <Label Grid.Row="0" Grid.Column="0" Text="Date" VerticalOptions="Center" />
                <DatePicker Grid.Row="0" Grid.Column="1" x:Name="PostedDatePicker" />

                <Label Grid.Row="1" Grid.Column="0" Text="Description" VerticalOptions="Center" />
                <Entry Grid.Row="1" Grid.Column="1" x:Name="DescriptionEntry" Placeholder="Description" />

                <Label Grid.Row="2" Grid.Column="0" Text="Amount" VerticalOptions="Center" />
                <Entry Grid.Row="2" Grid.Column="1" x:Name="AmountEntry" Keyboard="Numeric" Placeholder="0.00" />

                <Label Grid.Row="3" Grid.Column="0" Text="Category" VerticalOptions="Center" />
                <Grid Grid.Row="3" Grid.Column="1" ColumnDefinitions="*,Auto" ColumnSpacing="8">
                    <Picker Grid.Column="0" x:Name="CategoryPicker"
                            Title="Select category" />
                    <Button Grid.Column="1"
                            Text="+ Add"
                            Padding="10,0"
                            BackgroundColor="DarkSeaGreen"
                            TextColor="Black"
                            FontAttributes="Bold"
                            Clicked="AddCategoryButton_Clicked" />
                </Grid>
            </Grid>

            <Button Text="Create Rule"
                    x:Name="CreateRuleButton"
                    BackgroundColor="DarkSeaGreen"
                    TextColor="Black"
                    FontAttributes="Bold"
                    Clicked="CreateRuleButton_Clicked"
                    Margin="0,4,0,0" />

            <HorizontalStackLayout Spacing="12" Margin="0,20,0,0" HorizontalOptions="FillAndExpand">

                <Button Text="Save"
                        x:Name="SaveButton"
                        BackgroundColor="LightGreen"
                        TextColor="Black"
                        FontAttributes="Bold"
                        Clicked="SaveButton_Clicked"
                        HorizontalOptions="StartAndExpand" />

                <Button Text="Cancel"
                        BackgroundColor="CornflowerBlue"
                        TextColor="Black"
                        FontAttributes="Bold"
                        Clicked="CancelButton_Clicked"
                        HorizontalOptions="CenterAndExpand" />

                <Button Text="Return"
                        BackgroundColor="IndianRed"
                        TextColor="Black"
                        FontAttributes="Bold"
                        Clicked="ReturnButton_Clicked"
                        HorizontalOptions="End" />

            </HorizontalStackLayout>

            <Label x:Name="InfoLabel" TextColor="Gray" FontSize="12" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>