<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.Maui;assembly=LiveChartsCore.SkiaSharpView.Maui"
             x:Class="KukiFinance.Pages.ChartPage"
             Title="Account Balance Chart">
    <Grid Padding="10" RowDefinitions="Auto,*,Auto" RowSpacing="10">
        <Label x:Name="TitleLabel"
           Grid.Row="0"
           FontSize="20"
           FontAttributes="Bold"
           HorizontalOptions="Center"
           LineBreakMode="TailTruncation" />

        <ScrollView Grid.Row="1"
                Orientation="Horizontal"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="FillAndExpand">
            <lvc:CartesianChart x:Name="BalanceChart"
                          HorizontalOptions="FillAndExpand"
                          VerticalOptions="FillAndExpand"
                          MinimumHeightRequest="450"
                          MinimumWidthRequest="1400" />
        </ScrollView>

        <Button x:Name="ReturnButton"
            Grid.Row="2"
            Text="Return"
            BackgroundColor="IndianRed"
            TextColor="Black"
            FontSize="16"
            WidthRequest="120"
            HeightRequest="40"
            HorizontalOptions="Center"
            Clicked="OnReturnClicked" />
    </Grid>
</ContentPage>
