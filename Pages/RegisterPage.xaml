<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="eFinance.Pages.RegisterPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="{Binding Title}">

    <Grid RowDefinitions="Auto,*" Padding="10">

        <Label
            Grid.Row="0"
            Text="{Binding Title}"
            FontSize="20"
            FontAttributes="Bold"
            Margin="0,0,0,8" />

        <CollectionView Grid.Row="1" ItemsSource="{Binding Items}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid ColumnDefinitions="110,*,100" Padding="6">
                        <Label Grid.Column="0" Text="{Binding PostedDate}" />
                        <Label Grid.Column="1" Text="{Binding Description}" LineBreakMode="TailTruncation" />
                        <Label Grid.Column="2" Text="{Binding Amount}" HorizontalTextAlignment="End" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </Grid>
</ContentPage>
