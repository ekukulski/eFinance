<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:eFinance.Converters"
             x:Class="eFinance.Pages.AverageExpenses"
             Title="Average Expense Summary">

    <ContentPage.Resources>
        <converters:AmountColorConverter x:Key="AmountColorConverter"/>
        <converters:AmountFormatConverter x:Key="AmountFormatConverter"/>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">
            <Label Text="Average Expense by Category (Past Year)" FontAttributes="Bold" FontSize="20"/>
            <CollectionView ItemsSource="{Binding CategoryAverages}" 
                            HeightRequest="1100"
                            SelectionMode="Single"
                            SelectionChanged="OnCategorySelected">
                <CollectionView.Header>
                    <Grid ColumnDefinitions="*,100,100" Padding="0,0,20,5">
                        <Label Text="Category" FontAttributes="Bold" Grid.Column="0"/>
                        <Label Text="Frequency" FontAttributes="Bold" HorizontalOptions="End" Grid.Column="1" Margin="10,0,0,0"/>
                        <Label Text="Average" FontAttributes="Bold" HorizontalOptions="End" Grid.Column="2" Margin="10,0,0,0"/>
                    </Grid>
                </CollectionView.Header>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid ColumnDefinitions="*,100,100" Padding="0,0,20,5">
                            <Label Text="{Binding Category}" Grid.Column="0"/>
                            <Label Text="{Binding Frequency}" Grid.Column="1" HorizontalOptions="End" Margin="10,0,0,0"/>
                            <Label Text="{Binding AverageExpense, Converter={StaticResource AmountFormatConverter}}"
                                   TextColor="{Binding AverageExpense, Converter={StaticResource AmountColorConverter}}"
                                   Grid.Column="2"
                                   HorizontalOptions="End"
                                   Margin="10,0,0,0"/>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Button Text="Return"
                    x:Name="ReturnButton"
                    WidthRequest="96"
                    BackgroundColor="IndianRed"
                    TextColor="Black"
                    FontSize="16"
                    HorizontalOptions="Fill"
                    Clicked="ReturnButton_Clicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>