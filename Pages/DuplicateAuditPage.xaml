<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="eFinance.Pages.DuplicateAuditPage"
             x:Name="RootPage"
             Title="Duplicate Audit">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="12">

            <!-- Return -->
            <Button Text="Return"
                    BackgroundColor="IndianRed"
                    TextColor="White"
                    FontSize="16"
                    WidthRequest="220"
                    HorizontalOptions="Start"
                    CornerRadius="8"
                    Command="{Binding ReturnCommand}" />

            <Label Text="Duplicate Audit"
                   FontSize="22"
                   FontAttributes="Bold" />

            <!-- Run audit -->
            <Button Text="Run Duplicate Audit"
                    BackgroundColor="DarkSeaGreen"
                    TextColor="Black"
                    FontSize="18"
                    WidthRequest="220"
                    HorizontalOptions="Start"
                    CornerRadius="8"
                    Command="{Binding RunAuditCommand}" />

            <!-- Summary -->
            <Label Text="{Binding SummaryText}" />

            <!-- Results -->
            <CollectionView ItemsSource="{Binding Results}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="LightGray"
                               Padding="10"
                               Margin="0,6">

                            <VerticalStackLayout Spacing="4">
                                <Label Text="{Binding AccountName}" FontAttributes="Bold"/>
                                <Label Text="{Binding Type}" />
                                <Label Text="{Binding Reason}" />

                                <Label Text="{Binding A_Date}" />
                                <Label Text="{Binding A_Description}" />
                                <Label Text="{Binding A_Amount}" />

                                <Label Text="--- vs ---" />

                                <Label Text="{Binding B_Date}" />
                                <Label Text="{Binding B_Description}" />
                                <Label Text="{Binding B_Amount}" />

                                <HorizontalStackLayout Spacing="12">

                                    <!-- IMPORTANT: command is on the page VM, item is the parameter -->
                                    <Button Text="Keep Top (Soft Delete Bottom)"
                                            BackgroundColor="Firebrick"
                                            TextColor="White"
                                            FontSize="16"
                                            WidthRequest="260"
                                            HorizontalOptions="Start"
                                            CornerRadius="8"
                                            Command="{Binding BindingContext.KeepTopCommand, Source={x:Reference RootPage}}"
                                            CommandParameter="{Binding}" />

                                    <Button Text="Keep Bottom (Soft Delete Top)"
                                            BackgroundColor="DarkOrange"
                                            TextColor="White"
                                            FontSize="16"
                                            WidthRequest="260"
                                            HorizontalOptions="Start"
                                            CornerRadius="8"
                                            Command="{Binding BindingContext.KeepBottomCommand, Source={x:Reference RootPage}}"
                                            CommandParameter="{Binding}" />

                                    <Button Text="Accept (Not a Duplicate)"
                                            BackgroundColor="CornflowerBlue"
                                            TextColor="White"
                                            FontSize="16"
                                            WidthRequest="220"
                                            HorizontalOptions="Start"
                                            CornerRadius="8"
                                            Command="{Binding BindingContext.AcceptCommand, Source={x:Reference RootPage}}"
                                            CommandParameter="{Binding}" />

                                </HorizontalStackLayout>

                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
