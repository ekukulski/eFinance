<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:eFinance.Converters"
             x:Class="eFinance.Pages.OpeningBalancesPage"
             Title="Opening Balances">
    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:AmountFormatConverter x:Key="AmountFormatConverter" />
            <converters:AmountColorConverter x:Key="AmountColorConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>
    <VerticalStackLayout Padding="20,20,30,20" Spacing="16">
        <!-- Header Row -->
        <Grid ColumnDefinitions="*,*,*" Padding="0,0,16,0">
            <Label Grid.Column="0" Text="Date" FontSize="20" FontAttributes="Bold"
                   HorizontalOptions="FillAndExpand" HorizontalTextAlignment="Center"/>
            <Label Grid.Column="1" Text="Account" FontSize="20" FontAttributes="Bold"
                   HorizontalOptions="FillAndExpand" HorizontalTextAlignment="Start"/>
            <Label Grid.Column="2" Text="Opening Balance" FontSize="20" FontAttributes="Bold"
                   HorizontalOptions="FillAndExpand" HorizontalTextAlignment="End"/>
        </Grid>
        <!-- Data Rows -->
        <CollectionView x:Name="BalancesCollectionView" SelectionMode="Single"
                        Margin="0,8,0,8">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid ColumnDefinitions="*,*,*" Padding="0,0,16,0" RowSpacing="0">
                        <Label Text="{Binding Date, StringFormat='{0:yyyy-MM-dd}'}" Grid.Column="0"
                               HorizontalOptions="FillAndExpand" HorizontalTextAlignment="Center"/>
                        <Label Grid.Column="1"
                               HorizontalOptions="FillAndExpand" HorizontalTextAlignment="Start"
                               Text="{Binding Account, Converter={StaticResource AmountFormatConverter}}"
                               TextColor="{Binding Balance, Converter={StaticResource AmountColorConverter}}" />
                        <Label Grid.Column="2"
                               HorizontalOptions="FillAndExpand" HorizontalTextAlignment="End"
                               Text="{Binding Balance, Converter={StaticResource AmountFormatConverter}}"
                               TextColor="{Binding Balance, Converter={StaticResource AmountColorConverter}}" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <!-- Buttons -->
        <HorizontalStackLayout Padding="0,10,0,0" Spacing="20" HorizontalOptions="Center">
            <Button Text="Edit" 
                    x:Name="EditButton" 
                    WidthRequest="96"
                    Style="{StaticResource InfoButtonStyle}"
                    FontSize="16"
                    HorizontalOptions="Fill"
                    Clicked="EditButton_Clicked" />
            <Button Text="Return" 
                    x:Name="ReturnButton" 
                    WidthRequest="96"
                    Style="{StaticResource ReturnButtonStyle}"
                    FontSize="16"
                    HorizontalOptions="Fill"
                    Clicked="ReturnButton_Clicked" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>