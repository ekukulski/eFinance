<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="eFinance.Pages.ExpenseRecordPage"
             Title="Category Details">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="10">
            <Label Text="{Binding Category}" FontAttributes="Bold" FontSize="20"/>
            <!-- Add this label for total expense -->
            <Label Text="{Binding TotalExpense, StringFormat='Total Expense: {0:C2}'}"
                   FontAttributes="Bold"
                   FontSize="18"
                   TextColor="DarkRed"
                   Margin="0,0,0,10"/>
            <CollectionView ItemsSource="{Binding Expenses}" HeightRequest="1100">
                <CollectionView.Header>
                    <Grid ColumnDefinitions="100,400,300,100" Padding="0,0,0,5">
                        <Label Text="Date" FontAttributes="Bold" Grid.Column="0"/>
                        <Label Text="Description" FontAttributes="Bold" Grid.Column="1"/>
                        <Label Text="Category" FontAttributes="Bold" Grid.Column="2"/>
                        <Label Text="Amount" FontAttributes="Bold" Grid.Column="3" HorizontalOptions="End"/>
                    </Grid>
                </CollectionView.Header>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid ColumnDefinitions="100,400,300,100" Padding="0,0,0,5">
                            <Label Text="{Binding Date}" Grid.Column="0"/>
                            <Label Text="{Binding Description}" Grid.Column="1"/>
                            <Label Text="{Binding Category}" Grid.Column="2"/>
                            <Label Text="{Binding Amount, StringFormat='{}{0:C2}'}" Grid.Column="3" HorizontalOptions="End"/>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <Button Text="Return"
                    x:Name="ReturnButton"
                    WidthRequest="96"
                    BackgroundColor="IndianRed"
                    TextColor="Black"
                    FontSize="16"
                    HorizontalOptions="Fill"
                    Clicked="ReturnButton_Clicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>